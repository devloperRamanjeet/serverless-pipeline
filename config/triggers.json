{
  "functions": {
    "ray_converter": {
      "name": "ray-converter",
      "description": "Convert Ray format data to standard format",
      "runtime": "python3.11",
      "timeout": 30,
      "memory_size": 128,
      "api_gateway": {
        "enabled": true,
        "route": "POST /ray",
        "description": "HTTP endpoint for ray conversion",
        "cors": {
          "enabled": true,
          "allow_origins": [
            "*"
          ],
          "allow_methods": [
            "GET",
            "POST",
            "PUT",
            "DELETE"
          ],
          "allow_headers": [
            "Content-Type",
            "Authorization"
          ]
        }
      },
      "sqs": {
        "enabled": false,
        "queue_name": "ray-converter-queue",
        "batch_size": 10,
        "batch_window": 5,
        "description": "Process ray conversion from SQS messages"
      },
      "s3": {
        "enabled": false,
        "bucket_name": "ray-converter-input",
        "events": [
          "s3:ObjectCreated:*"
        ],
        "filter": {
          "key_prefix": "input/",
          "key_suffix": ".json"
        },
        "description": "Process ray files uploaded to S3"
      },
      "eventbridge": {
        "enabled": false,
        "schedule": "rate(1 hour)",
        "description": "Periodic execution of ray converter"
      },
      "dynamodb": {
        "enabled": false,
        "table_name": "ray-events",
        "stream_view_type": "NEW_AND_OLD_IMAGES",
        "batch_size": 100,
        "description": "Process changes in DynamoDB table"
      },
      "sns": {
        "enabled": false,
        "topic_name": "ray-conversion-topic",
        "description": "Triggered by SNS notifications"
      }
    }
  },
  "environments": {
    "dev": {
      "api_gateway_stage": "dev",
      "log_retention_days": 7,
      "tags": {
        "Environment": "development",
        "Team": "platform"
      }
    },
    "prod": {
      "api_gateway_stage": "prod",
      "log_retention_days": 30,
      "tags": {
        "Environment": "production",
        "Team": "platform"
      }
    }
  }
}